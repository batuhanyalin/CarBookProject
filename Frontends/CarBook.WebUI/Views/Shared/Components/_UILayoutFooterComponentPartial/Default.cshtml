@model List<FooterAddressListDto>
<footer class="ftco-footer ftco-bg-dark ftco-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2"><a href="#" class="logo">Car<span>book</span></a></h2>
                    <p>@ViewBag.description</p>
                    <ul class="ftco-footer-social list-unstyled float-md-left float-lft mt-5">
                        <li class="ftco-animate"><a href="#"><span class="icon-twitter"></span></a></li>
                        <li class="ftco-animate"><a href="#"><span class="icon-facebook"></span></a></li>
                        <li class="ftco-animate"><a href="#"><span class="icon-instagram"></span></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4 ml-md-5">
                    <h2 class="ftco-heading-2">Hızlı Linkler</h2>
                    <ul class="list-unstyled">
                        <li><a href="#" class="py-2 d-block">Hakkımızda</a></li>
                        <li><a href="#" class="py-2 d-block">Hizmetler</a></li>
                        <li><a href="#" class="py-2 d-block">Şartlar & Koşullar</a></li>
                        <li><a href="#" class="py-2 d-block">Güvenlik</a></li>
                        <li><a href="#" class="py-2 d-block">Çerez Politikası</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2">Müşteri Desteği</h2>
                    <ul class="list-unstyled">
                        <li><a href="#" class="py-2 d-block">Sıkça Sorulanlar</a></li>
                        <li><a href="#" class="py-2 d-block">Ödeme Yöntemleri</a></li>
                        <li><a href="#" class="py-2 d-block">Kiralama</a></li>
                        <li><a href="/Login/Index/" class="py-2 d-block">Giriş Yap</a></li>
                        <li><a href="/Profile/Index/" class="py-2 d-block">Profilim</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2">Bir sorunuz mu var?</h2>
                    <div class="block-23 mb-3">
                        <ul>
                            @foreach (var item in Model)
                            {
                                <li><span class="icon icon-map-marker"></span> <span class="text"> @item.Address</span></li>
                                <li><a href="tel:+@item.Phone"><span class="icon icon-phone"></span> <span class="text">+ @item.Phone</span></a></li>
                                <li><a href="mailto:@item.Email"><span class="icon icon-envelope"></span> <span class="text"> @item.Email</span></a></li>
                            }                         
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">

                <p>
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    Copyright &copy;<script>document.write(new Date().getFullYear());</script> Tüm Hakları Saklıdır | <a href="https://github.com/batuhanyalin/CarBookProject" title="Proje kodlarına gitmek için tıklayın" target="_blank">Batuhan YALIN</a> tarafından yapılmıştır.
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                </p>
            </div>
        </div>
    </div>
</footer>